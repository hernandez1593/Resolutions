%h1 Client Management
= link_to('New Client', new_admin_client_path)
%table.table.table-bordered
  %thead
    %tr
      %th{:scope => "col"} Email
      %th{:scope => "col"} Role
      %th{:scope => "col"} Delete
  %tbody
    - @clients.each do |client|
      %tr
        %td
          = client.user.email
        %td
          = client.user.account_type
        %td
          = link_to("Delete user", admin_client_path(client), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-sm')
= render 'admin/shared/links'
