%h3 Mentor Management
= link_to('New Mentor', new_admin_mentor_path)
%table.table.table-bordered
  %thead
    %tr
      %th{:scope => "col"} Email
      %th{:scope => "col"} Role
      %th{:scope => "col"} Delete
  %tbody
    - @users.each do |mentor|
      %tr
        %td
          = mentor.user.email
        %td
          = mentor.user.account_type
        %td
          = link_to("Delete user", admin_mentor_path(mentor), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-sm')
= render 'admin/shared/links'
