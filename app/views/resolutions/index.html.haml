%h1 Resoluciones
.container
  .row
    .input-group.mb3
      .input-gorup-prepend
        = link_to "buscar", new_resolution_path, class: 'btn btn-aoutline-secondary'
      = text_field_tag @search, nil, class: 'form-control'
%table
  %thead
    %tr
      %th{:colspan => "3"}
  -unless @resolutions.nil?
    %tbody
      .container
        - @resolutions.each do |resolution|
          %tr
            .row
              .col
                .form-group
                  %p= "Resolucion: #{resolution.title}"
              .col
                .form-group
                  %p= "Codigo: #{resolution.code}" 

            .row
              .col
                .form-group
                  %p= "Creada: #{resolution.topic}"
            .row
              .col
                .form-group
                  %p= "de: #{resolution.topic}" 
              .col
                .form-group
                  %p= "para: #{resolution.topic}"               

            .row
              .col
                .form-group
          
                %td= link_to 'Show', resolution
                %td= link_to 'Edit', edit_resolution_path(resolution)
                %td= link_to 'Destroy', resolution, method: :delete, data: { confirm: 'Are you sure?' }
          %br/

= link_to 'New Resolution', new_resolution_path
